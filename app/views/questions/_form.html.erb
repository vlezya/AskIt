<%= form_with model: @question do |f| %>  
  <div>   
    <%= f.label :title %>
    <%= f.text_field :title, reqired: true, minlength: 2, placeholder: "Title" %>
  </div>
  
  <div> 
    <%= f.label :body %>
    <%= f.text_field :body, reqired: true, minlength: 2 %>
  </div>

  <%= f.submit "Edit question!" %>
<% end %>